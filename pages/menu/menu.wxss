.swiper{
  display: flex;
  margin-top: 0rpx;
  height: 100%; 
  width: 100%; 
  overflow: hidden;
  justify-content: center;
  }
.topTabSwiper{
  display: flex;
  height:80rpx;
  line-height: 80rpx;
  width:100%;
  top:0;
  text-align:center;
  position: fixed;
  background:  #fff;
  z-index: 20;
}
.tab{
  font-size: 30rpx;
  display: inline-block;
  width:33.3%;
  color:rgb(94, 94, 94);
  padding-top: 0rpx;
  padding-bottom: 12rpx;
}
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
.tabBorer{    
  color: rgb(37, 37, 37);
  font-weight: bold;
  position: relative;
}
.tab.tabBorer:after{  
   content: "";
   display: block;
   height: 6rpx;
   width: 60rpx;
   background: rgb(255, 180, 20);
   position: absolute;
   top:65rpx;
   left: 95rpx;
   border-radius: 20rpx;
  }
.top_line{
  display: flex;
  line-height: 80rpx;
  width:100%;
  top:0;
  text-align:center;
  position: fixed;
  background:  #fff;
  z-index:50;
  background-color:rgb(218, 218, 218);
  height: 1rpx;
  margin-top: 80rpx;
}

